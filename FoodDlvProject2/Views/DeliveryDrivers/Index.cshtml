@model IEnumerable<FoodDlvProject2.Models.ViewModels.DeliveryDriversIndexVM>

@{
    ViewData["Title"] = "Index";
}
<h1>外送員管理</h1>
<h2>基本資料</h2>
<a class="collapse-item" href="/DeliveryRecords/Index">外送紀錄</a>
<a class="collapse-item" href="/Pays/Index">薪資資料</a>
<a class="collapse-item" href="/DeliveryViolationRecords/Index">違規紀錄</a>
<a class="collapse-item" href="/DriverCancellationRecords/Index">取消訂單紀錄</a>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  DataTables Example
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Id)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DriverName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Gender)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.AccountStatus)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.WorkStatuse)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Id)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DriverName)
							</td>
							<td>
								@{ var sex = item.Gender?"男":"女"; }
								@sex
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.AccountStatus)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.WorkStatuse)
							</td>
							<td>
								<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
								<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
								<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
							</td>
						</tr>
					}
				</tbody>
                  </table>
                </div>
              </div>
            </div>
