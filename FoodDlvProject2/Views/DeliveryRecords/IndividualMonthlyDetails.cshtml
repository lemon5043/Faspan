@model IEnumerable<FoodDlvProject2.Models.ViewModels.DeliveryIndividualDetailsRecordVM>

@{
	ViewData["Title"] = "DeliveryIndividualDetailsRecord";
}

<h1>個人當月外送紀錄</h1>
<h3>@Html.DisplayNameFor(model => model.DriverName):@ViewBag.DriverName</h3>
<p>結算月份: @ViewBag.Year 年 @ViewBag.Month 月</p>
<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">
			DataTables Example
		</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered"
				   id="dataTable"
				   width="100%"
				   cellspacing="0">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Id)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.OrderDate)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Milage)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Status)
						</th>

						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.Id)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.OrderDate)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Milage)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>

							<td>
								<a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id">OrderDetails</a>
							</td>
						</tr>
					}
				</tbody>

			</table>
		</div>
	</div>
</div>
<a asp-controller="pays"
   asp-action="IndividualMonthlyDetails"
   asp-route-year="@ViewBag.Year = year"
   asp-route-month="@ViewBag.Month = month"
   asp-route-id="@ViewBag.DriverId">Details</a>