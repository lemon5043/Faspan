@model IEnumerable<FoodDlvProject2.Models.ViewModels.DeliveryMonthlyDetailRecordVM>

@{
    ViewData["Title"] = "MonthlyDetails";
}

<h1>個人外送紀錄</h1>
<p>@Html.DisplayNameFor(model => model.DriverName):@ViewBag.DriverName</p>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
            <a class="collapse-item" href="/DeliveryDrivers/Details/@ViewBag.DriverId">個人基本資料</a>
            <a class="collapse-item" href="/Pays/MonthlyDetails/@ViewBag.DriverId">個人薪水紀錄</a>
            <a class="collapse-item" href="/DeliveryViolationRecords/PersonalDetails/@ViewBag.DriverId">個人違規紀錄</a>
            <a class="collapse-item" href="/DriverCancellationRecords/Details/@ViewBag.DriverId">個人取消訂單紀錄</a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered"
                       id="dataTable"
                       width="100%"
                       cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalMilage)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalDelievery)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                @Html.DisplayFor(modelItem => item.OrderDate.Year)年
                                    @Html.DisplayFor(modelItem => item.OrderDate.Month)月
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalMilage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalDelievery)
                                </td>

                                <td>

                                    <a asp-action="IndividualMonthlyDetails" 
                                    asp-route-year="@item.OrderDate.Year"
                                    asp-route-month="@item.OrderDate.Month" 
                                    asp-route-id="@ViewBag.DriverId">檢視</a>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div>
    </div>