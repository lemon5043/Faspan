                    @Html.DisplayFor(modelItem => item.ViolationDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeliveryDriversId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DeliveryDriversId">Details</a> |
