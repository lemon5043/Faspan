<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDriversId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDrivers.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDrivers.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Violation.ViolationContent)
