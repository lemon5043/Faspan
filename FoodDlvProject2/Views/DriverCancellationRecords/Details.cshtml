@model IEnumerable<FoodDlvProject2.Models.ViewModels.DriverCancellationRecordsDetailsVM>

@{
	ViewData["Title"] = "Index";
}

<h1>取消訂單紀錄</h1>
<a class="collapse-item" href="/DeliveryDrivers/Details/@ViewBag.DriverId">基本資料</a>
<a class="collapse-item" href="/Pays/MonthlyDetails/@ViewBag.DriverId">薪水紀錄</a>
<a class="collapse-item" href="/DeliveryRecords/MonthlyDetails/@ViewBag.DriverId">外送紀錄</a>
<a class="collapse-item" href="/DeliveryViolationRecords/PersonalDetails/@ViewBag.DriverId">違規紀錄</a>
<h3> @Html.DisplayNameFor(model => model.DriverName):@ViewBag.DeliveryName</h3>

<div class="card shadow mb-4">
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary">
			DataTables Example
		</h6>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered"
				   id="dataTable"
				   width="100%"
				   cellspacing="0">
				<thead>
					<tr>

						<th>
							@Html.DisplayNameFor(model => model.OrderId)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DriverName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Reason)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Context)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.CancellationDate)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.OrderId)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DriverName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Reason)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Context)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.CancellationDate)
							</td>
							<td>
								<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>
