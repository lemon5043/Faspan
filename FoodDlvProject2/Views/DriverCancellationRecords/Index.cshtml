@model IEnumerable<FoodDlvProject2.Models.ViewModels.DriverCancellationRecordsIndexVM>

@{
    ViewData["Title"] = "Index";
}

<h1>外送員管理</h1>
<h2>取消訂單紀錄</h2>
<a class="collapse-item" href="/DeliveryDrivers/Index">基本資料</a>
<a class="collapse-item" href="/Pays/Index">薪資資料</a>
<a class="collapse-item" href="/DeliveryRecords/Index">外送紀錄</a>
<a class="collapse-item" href="/DeliveryViolationRecords/Index">違規紀錄</a>

<table class="table">
    
</table>
<div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                  DataTables Example
                </h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table
                    class="table table-bordered"
                    id="dataTable"
                    width="100%"
                    cellspacing="0"
                  >
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DriverId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DriverName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Reason)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CancellationDate)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DriverId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DriverName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reason)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CancellationDate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">維護</a> |
                                <a asp-action="Details" asp-route-id="@item.DriverId">檢視</a> 
                            </td>
                        </tr>
                    }
                </tbody>
                  </table>
                </div>
              </div>
            </div>

